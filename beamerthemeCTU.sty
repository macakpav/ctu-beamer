\mode
<presentation>
\def\Put(#1,#2)#3{\leavevmode\makebox(0,0){\put(#1,#2){#3}}}

\definecolor{cvut_navy}{HTML}{0065BD}
\definecolor{cvut_blue}{HTML}{6AADE4}
\definecolor{KUL_light_blue}{rgb}{0.86, 0.91, 0.94}

\setbeamercolor{title1}{fg=white,bg=cvut_blue}
\setbeamercolor{title2}{fg=cvut_navy,bg=KUL_light_blue}
