% Create a new box type
\usepackage{tcolorbox}
\newtcolorbox{ctublock}[1]{
	before=\par\smallskip\centering,
	colback=KUL_light_blue,
	colbacktitle=cvut_navy,
	coltitle=white,
	coltext=cvut_navy,
	colframe=cvut_blue,
	boxrule=1pt,
	%titlerule=0pt,
	arc=2pt,
	fonttitle=\bfseries,
	title={\strut#1}
}
\newtcolorbox{cbox}[1][]{
	before=\par\smallskip,
	#1
}
